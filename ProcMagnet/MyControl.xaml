<UserControl x:Class="Company.ProcMagnet.MyControl"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:ProcMagnet="clr-namespace:Company.ProcMagnet"
       Background="{DynamicResource VsBrush.Window}"
       Foreground="{DynamicResource VsBrush.WindowText}"
       mc:Ignorable="d"
       d:DesignHeight="300" d:DesignWidth="300"
       Name="MyToolWindow">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="64*"/>
    </Grid.RowDefinitions>
    <StackPanel Name="pnlMain" Orientation="Vertical" Grid.RowSpan="3">
      <TextBlock Margin="10" HorizontalAlignment="Center">ProcMagnet</TextBlock>
      <ProcMagnet:ProcMagnetButton Content="Word"       TargetProcess="winword.exe"/>
      <ProcMagnet:ProcMagnetButton Content="Excel"      TargetProcess="excel.exe"/>
      <ProcMagnet:ProcMagnetButton Content="Powerpoint" TargetProcess="powerpnt.exe"/>
    </StackPanel>
  </Grid>
</UserControl>
